@mixin border-radius($radius)
  -webkit-border-radius: $radius
  -moz-border-radius: $radius
  -ms-border-radius: $radius
  -o-border-radius: $radius
  border-radius: $radius

@mixin border-top-left-radius($radius)
  -webkit-border-top-left-radius: $radius
  -moz-border-radius-topleft: $radius
  border-top-left-radius: $radius

@mixin border-top-right-radius($radius)
  -webkit-border-top-right-radius: $radius
  -moz-border-radius-topright: $radius
  border-top-right-radius: $radius

@mixin box-shadow($params)
  box-shadow: $params
  -o-box-shadow: $params
  -ms-box-shadow: $params
  -moz-box-shadow: $params
  -webkit-box-shadow: $params

html
  background: black image_url('background_main.jpg') no-repeat center top

body
  margin: 0 5%
  height: 100%
  #banner
    padding: 15px 0px 0px 280px
    margin: 0px
    margin-bottom: 20px
    font: small-caps 42px/42px "Times New Roman", serif
    color: white
    text-align: center
    #login
      padding: 10px
      background: white
      border: 1px solid #777
      @include border-radius(10px)
      @include box-shadow(2px 2px 2px #555)
      float: right
      font: 16px/16px "Arial"
      color: black
      text-align: top-right
    
  #columns
    #side
      margin: 5px auto
      background: white
      width: 400px
      color: #09f
      border: 1px solid #aaa
      @include border-radius(10px)
      @include box-shadow(2px 2px 2px #555)
      ul
        padding: 0
        margin: 0
        text-align: center
        list-style: none
        li
          display: inline
          font-size: 24px
          padding: 0 10px
          a
            text-decoration: none
            &:hover
              color: #c60
              background: transparent

    #main
      padding: 1em 2em
      border: 1px solid #aaa
      @include border-radius(30px)
      @include box-shadow(2px 2px 2px #555)
      background-color: white

    #copyright
      text-align: center
      font: small-caps 16px/16px "Times New Roman", serif
      color: #aaa
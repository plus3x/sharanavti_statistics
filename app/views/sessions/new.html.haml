#login_form
  - if flash[:notice]
    %p#notice= flash[:notice]
  = form_tag do
    %fieldset
      %legend= t '.please_log_in'
      %div
        = label_tag :name
        %br
        = email_field_tag :name, params[:name]
      %div
        = label_tag :password
        %br
        = password_field_tag :password, params[:password]
      %div
        = submit_tag 'login'
